{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["typings", "node_modules/@types"],
    "moduleResolution": "node", // 选择模块解析策略： 'node' (Node.js) or 'classic' (TypeScript pre-1.6)
    "baseUrl": "./packages",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["packages/*"],
  "exclude": ["node_modules", "lib", "dist", "typings", "__tests__", "tests"]
}
